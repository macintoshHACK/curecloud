                    <a class="nav-link" href="/customer_update?customerId=<%= customerId %>">Update Profile</a>
                </li>
            </ul>
           
        </div>
    </nav>
    <h1>Categories</h1>

    <!-- Display pharmacy ID -->
   <!-- <p><strong>Pharmacy ID:</strong> <%= pharmacyId %></p>-->

    <form action="/search_cat" method="get">
        <label for="searchQuery">Search Category:</label>
        <input type="hidden" name="pharmacyId" value="<%= pharmacyId %>">
        <input type="hidden" name="customerId" value="<%= customerId %>">
        <input type="text" id="searchQuery" name="searchQuery" placeholder="Enter category name">
        <button type="submit">Search</button>
    </form>

    <!-- Display search query if defined -->
    <% if (searchQuery) { %>
        <p><strong>Search Query:</strong> <%= searchQuery %></p>
    <% } %>

    <ul>
        <% categories.forEach(category => { %>
            <li>
                <!-- Display category attributes -->
                <strong>Category ID:</strong> <%= category.id %><br>
                <strong>Category Name:</strong> <%= category.generic_name %><br>
                <strong>Description:</strong> <%= category.description %><br>
                <!-- Add other attributes as needed -->
                <a href="/category_details?categoryId=<%= category.id %>&pharmacyId=<%= pharmacyId %>&customerId=<%= customerId %>">Details Category</a>

                <!-- Clickable link to view details of the category -->
              <!--  <a href="/category_details?categoryId=<%= category.id %>&pharmacyId=<%= pharmacyId %>">check here </a>-->

                <br><br>
            </li>
        <% }) %>
    </ul>
    <script
    src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"
    ></script>
    <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"
    ></script>
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"
    ></script>
