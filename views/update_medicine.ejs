<!-- Inside your update_medicine.ejs file -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Update Medicine | Square Pharmaceuticals</title>
  <style>
    body {
      background: linear-gradient(45deg, #005500, #ffffff);
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
    }

    .header {
      text-align: center;
      padding: 20px;
      background-color: #ffffff;
      color: #005500;
      font-size: 24px;
      font-weight: bold;
      position: relative;
    }

    .header::after {
      content: '';
      display: block;
      height: 3px;
      background-color: #005500;
      position: absolute;
      bottom: 0;
      left: 50%;
      transform: translateX(-50%);
      width: 0;
      transition: width 0.5s ease-in-out;
    }

    .header:hover::after {
      width: 100%;
    }

    .update-form {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #ffffff;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    label {
      display: block;
      margin: 10px 0;
    }

    input {
      width: 100%;
      padding: 10px;
      margin-bottom: 15px;
      box-sizing: border-box;
    }

    .error-message {
      color: #ff0000;
      margin-top: 10px;
    }

    .btn-container {
      text-align: center;
    }

    .btn-submit {
      padding: 10px 20px;
      background-color: #005500;
      color: #ffffff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="header">Square Pharmaceuticals</div>

  <h1>Update Medicine</h1>

  <div class="update-form">
    <form action="/update_medicine/<%= drug.id %>" method="post">
      <!-- Add form fields for each column -->
      <label for="medicine_name">Medicine Name:</label>
      <input type="text" id="medicine_name" name="medicine_name" value="<%= drug.medicine_name %>" required>

      <label for="category_id">Category ID:</label>
      <input type="number" id="category_id" name="category_id" value="<%= drug.category_id %>" required>

      <label for="strip_price">Strip Price:</label>
      <input type="number" id="strip_price" name="strip_price" value="<%= drug.strip_price %>" step="0.01" required>

      <label for="unit_price">Unit Price:</label>
      <input type="number" id="unit_price" name="unit_price" value="<%= drug.unit_price %>" step="0.01" required>

      

      <label for="quantity">Quantity:</label>
      <input type="number" id="quantity" name="quantity" value="<%= drug.quantity %>" required>

     

      <label for="remedies">Remedies:</label>
      <input type="text" id="remedies" name="remedies" value="<%= drug.remedies %>">

      <!-- Display error message if manufacturing date is greater than or equal to expiration date -->
     

      <div class="btn-container">
        <button type="submit" class="btn-submit">Update Medicine</button>
      </div>
    </form>
  </div>
 