  ></script>
  <% if (typeof msg !== 'undefined' && msg) { %>
    <div class="alert alert-success" role="alert">
        <%= msg %>
    </div>
<% } %>

<div class="cards-container">
    <% categories.forEach(category => { %>
        <div class="card">
            <h2><%= category.generic_name %></h2>
            <p><%= category.description %></p>
            
        </div>
    <% }); %>
</div>