<h1>Medicine Information</h1>

<div class="container mt-4 mb-4">
  <form action="/admin/viewdrugs" method="GET" class="form-inline" id="searchForm">
      <div class="form-group mx-sm-3 mb-2">
          <label for="searchInput" class="sr-only">Search Medicine</label>
          <input type="text" class="form-control" id="searchInput" name="search" placeholder="Search by Name">
          <div id="suggestions-container"></div>
      </div>
      <button type="submit" class="btn btn-success mb-2">Search</button>
  </form>
</div>


  
<h1>Medicine Information for <%= pharmacyName %></h1>

    <div class="cards-container">
        <% drugs.forEach(drug => { %>
            <div class="card">
                <h2><%= drug.medicine_name %></h2>
               
                <p><%= drug.generic_name %></p>
                
                <p>Strip Price: <%= drug.strip_price %></p>
                <p>Unit Price: <%= drug.unit_price %></p>
                <p>Expire Date: <%= drug.expire_date %></p>
                <p>Manufacturing Date: <%= drug.manufacturing_date %></p>
                <p>Quantity: <%= drug.amount_od_drug %></p>
                
