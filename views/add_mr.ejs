<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Medical Representative</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            background-color: #d2dde5; /* Sky Blue background */
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            color: #6aadf0; /* Deep Blue text color */
        }

        h1 {
            text-align: center;
            padding: 10px;
            font-size: 32px;
            font-weight: bold;
            animation: fadeIn 3s; /* Add fade-in animation */
        }

        form {
            width: 80%; /* Set the form width to cover 80% of the page */
            margin: 20px auto;
            padding: 20px;
            background-color: #131314; /* Purple form background */
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            animation: fadeInUp 1.5s; /* Add fade-in-up animation */
        }

        label {
            display: block;
            margin: 10px 0;
            color: #fff; /* White label text color */
        }

        input[type="text"],
        input[type="checkbox"] {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            box-sizing: border-box;
            border: 1px solid #fff; /* White border */
            border-radius: 5px;
            background-color: #a396af; /* Purple input background */
            color: #fff; /* White text color */
        }

        button {
            background-color: #514f52; /* Indigo button background */
            color: #fff; /* White button text */
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        button:hover {
            background-color: #800080; /* Darker Purple on hover */
        }

        a {
            display: block;
            text-align: center;
            margin-top: 20px;
            color: #001f3f; /* Deep Blue link color */
            text-decoration: none;
            font-weight: bold;
        }

        /* Animation keyframes */
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <h1>Add Medical Representative</h1>

    <form action="/add_mr" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required>

        <label for="designation">Designation:</label>
        <input type="text" id="designation" name="designation" required>
        <label for="salary">salary:</label>
        <input type="number" id="salary" name="salary" required>


        <label>Pharmacies:</label>
        <% pharmacies.forEach(pharmacy => { %>
            <div>
                <input type="checkbox" id="<%= pharmacy.id %>" name="pharmacies" value="<%= pharmacy.id %>">
                <label for="<%= pharmacy.id %>"><%= pharmacy.name %></label>
            </div>
        <% }) %>

        <!-- Submit Button -->
        <button type="submit">Add Medical Representative</button>
    </form>

    <a href="/first_page">Back to Home</a>
</body>
</html>
