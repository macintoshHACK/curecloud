<!-- buy_medicine.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Medicine</title>
    <link rel="stylesheet" href="/styles.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f9f9f9;
            color: #333;
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            text-align: center;
        }

        h1 {
            color: #008080; /* Teal color */
        }

        ul {
            list-style-type: none;
            padding: 0;
        }

        li {
            background-color: #fff;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
            color: #008080; /* Teal color */
        }

        input[type="number"] {
            width: 60px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 16px;
        }

        button[type="submit"] {
            background-color: #008080;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 16px;
            margin-top: 10px;
        }

        button[type="submit"]:hover {
            background-color: #005656;
        }

        a {
            color: #008080;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <h1>Medicine</h1>

    <form action="/buy_medicine" method="post">
        <input type="hidden" name="pharmacyName" value="<%= pharmacyName %>">

        <ul>
            <% medicines.forEach(medicine => { %>
                <li>
                    <strong>Medicine Name:</strong> <%= medicine.medicine_name %><br>
                    <strong>Generic Name:</strong> <%= medicine.generic_name %><br>
                    <strong>Description:</strong> <%= medicine.description %><br>
                    <strong>Strip Price:</strong> <%= medicine.strip_price %><br>

                    <!-- Input field for buying quantity -->
                    <label for="<%= 'count_' + medicine.id %>"><span style="color: #008080;">Buy Quantity:</span></label>
                    <input type="number" id="<%= 'count_' + medicine.id %>" name="<%= 'count_' + medicine.id %>" min="0" value="0">

                    <br><br>
                </li>
            <% }) %>
        </ul>

        <button type="submit">Buy</button>
    </form>

    <a href="/">Back to Pharmacy First Page</a>
</body>
</html>
