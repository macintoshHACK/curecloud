<!-- go_to_pharmacy.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css">
    <title>Cure Cloud</title>
    <!-- Add any additional styles or scripts if needed -->
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="/">Cure Cloud</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
  
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
               
                <li class="nav-item">
                    <a class="nav-link" href="/my_pharmacies?representativeId=<%= representativeId%>">View Pharmacies</a>
                </li>
                
            </ul>
           
        </div>
    </nav>
    <div class="header">
        <h1>Pharmacy Information</h1>
    </div>

    <div class="info-container">
        <h2>Drugs in Pharmacy:</h2>
        <ul>
            <% drugs.forEach(drug => { %>
                <li>
                    <p><strong>Name:</strong> <%= drug.medicine_name %></p>
                    <p><strong>Strip Price:</strong> <%= drug.remedies %></p>
                    <p><strong>Strip Price:</strong> <%= drug.strip_price %></p>
                    <form action="/advertise_here" method="get" style="display: inline;">
                        <input type="hidden" name="pharmacyId" value="<%= pharmacyId %>">
                        <input type="hidden" name="medicalRepresentativeId" value="<%= representativeId %>">
                        <input type="hidden" name="drugId" value="<%= drug.id %>">
                        <button type="submit">Advertise Here</button>
                    </form>
                    <!-- Add other drug information as needed -->
                </li>
            <% }) %>
        </ul>
    </div>
    <script
    src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"
    ></script>
    <script
    src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"
    ></script>
    <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"
    ></script>
    <a href="/">back</a>
</body>
</html>
